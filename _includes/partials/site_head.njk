{% if page.data.url == '/classes/' %}
<style>
  .sticky-banner {
    top: 0;
    left: 0;
    right: 0;
    padding: 0.5em;
    z-index: 100;
    text-wrap: balance;
  }

  .sticky-banner,
  .sticky-banner * {
    background-color: #58675a;
    color: #f0e7da;
  }

  .sticky-banner a {
    font-weight: 700;
    text-decoration: underline 0.15em currentColor;
    text-underline-offset: 0.2ex;
    transition: text-underline-offset 300ms;
  }
  .sticky-banner a:hover {
  text-underline-offset: 0.8ex;
}

  .to-shopify span:hover {
    background-color: #f0e7da;
    color: #58675a;
  }
  .to-shopify span {
    transition: all 300ms;
  }

</style>

<div class="sticky-banner">
  <p>We're in the middle of migrating our site. Our classes are currently listed at <a class="to-shopify"
      href="https://devonpottery.myshopify.com/pages/classes"><span>devonpottery.myshopify.com</span></a>.</p>
</div>
{% endif %}

<header class="cluster" style="--justify: space-between; flex-wrap: nowrap">
  <div>
    <a href="{{ '/' | url }}" title="Devon Pottery Guild - Home"><img src='/statics/DPG Logo-02.svg'
        alt="Devon Pottery Guild"></a>
  </div>
  {% include "partials/nav.njk" %}
</header>